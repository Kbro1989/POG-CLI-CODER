{
  "name": "pog-coder-vibe",
  "version": "1.0.0",
  "description": "Terminal-first AI coding assistant with binary-optimized routing",
  "type": "module",
  "bin": {
    "pog": "./dist/cli.js"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsx watch cli/index.ts",
    "build": "tsc --noEmit && esbuild cli/index.ts --bundle --outfile=dist/cli.js --platform=node --target=node20 --format=esm --banner:js=\"import { createRequire } from 'module'; const require = createRequire(import.meta.url); globalThis.__filename = require('url').fileURLToPath(import.meta.url); globalThis.__dirname = require('path').dirname(globalThis.__filename);\" --external:sqlite3 --external:tree-sitter --external:pino-pretty --minify",
    "pog": "node cli/entry.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint src cli --ext .ts",
    "typecheck": "tsc --noEmit",
    "vscode:package": "cd vscode-extension && vsce package",
    "deploy": "pwsh ./deploy.ps1",
    "prepare": "husky install"
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.4",
    "@google/genai": "^1.36.0",
    "chalk": "^5.6.2",
    "chokidar": "^3.6.0",
    "diff": "^8.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "globby": "^14.0.2",
    "ignore": "^7.0.5",
    "lodash": "^4.17.21",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prompts": "^2.4.2",
    "simple-git": "^3.30.0",
    "sqlite3": "^5.0.2",
    "tree-sitter": "^0.21.1",
    "tree-sitter-typescript": "^0.21.2",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.0",
    "@types/prompts": "^2.4.9",
    "@types/sqlite3": "^3.1.11",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/vsce": "^3.0.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^4.0.17"
  },
  "keywords": [
    "ai",
    "coding",
    "terminal",
    "free",
    "local"
  ],
  "author": "POG Community",
  "license": "MIT",
  "overrides": {
    "tar": "^7.5.3"
  },
  "main": "jest.config.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  }
}
